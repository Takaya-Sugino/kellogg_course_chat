<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Sessions

    <a data-toggle="collapse" href="#course_sessions_new_form">
      Add session
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @course.sessions.each do |session| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to session, session %>

        <%= link_to session, method: :delete, data: { confirm: "Do you really want to delete this session" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="course_sessions_new_form">
        <%= render partial: "courses/course_sessions_new_form" %>
      </div>
    </div>

  </ul>
</div>
