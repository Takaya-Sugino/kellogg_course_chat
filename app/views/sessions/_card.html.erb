<div class="card mb-3">
  <h2 class="card-header h4">
    Session #<%= session.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Course</dt>
      <dd>
        <% if @session.course.present? %>
          <%= link_to session.course, session.course %>
        <% end %>
      </dd>

      <dt>Professor</dt>
      <dd>
        <% if @session.professor.present? %>
          <%= link_to session.professor, session.professor %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back session, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_session_url(session), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to session, method: :delete, data: { confirm: "Do you really want to delete this session?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(session.updated_at) %> ago
  </div>
</div>
