<div class="card mb-3">
  <h2 class="card-header h4">
    Professor #<%= professor.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <!-- Display name start -->
      <dd><%= professor.name %></dd>
      <!-- Display name end -->

      <dt>Bio</dt>
      <!-- Display bio start -->
      <dd><%= professor.bio %></dd>
      <!-- Display bio end -->

      <dt>Url</dt>
      <!-- Display url start -->
      <dd><%= professor.url %></dd>
      <!-- Display url end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back professor, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link professor start -->
      <div class="col">
        <%= link_to edit_professor_url(professor), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link professor end -->

      <!-- Delete link professor start -->
      <div class="col">
        <%= link_to professor, method: :delete, data: { confirm: "Do you really want to delete this professor?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link professor end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(professor.updated_at) %> ago
  </div>
</div>
