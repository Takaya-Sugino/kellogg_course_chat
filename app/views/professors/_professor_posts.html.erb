<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Posts

    <a data-toggle="collapse" href="#professor_posts_new_form">
      Add post
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @professor.posts.each do |post| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to post, post %>

        <%= link_to post, method: :delete, data: { confirm: "Do you really want to delete this post" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="professor_posts_new_form">
        <%= render partial: "professors/professor_posts_new_form" %>
      </div>
    </div>

  </ul>
</div>
